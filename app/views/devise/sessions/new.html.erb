           <div class="container">
             <div class="card opacity" style="margin-top:100px;">
                <div class="card-body y-card"> 
                  <div class="center-btn y-login">
                    <div class="y-login-logo">Log in</div>
                  </div>
                  <div class="center-btn">
                    <p>자신에게 딱 맞는 영양제 조합을 찾아보세요!</p>
                  </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
                  <div class="form-group">
                    <%= f.label :email, class:"y-email-form" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"y-email-form" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password, class:"y-email-form" %><br />
                    <%= f.password_field :password, autocomplete: "off" , class:"y-email-form"%>
                  </div>

  <% if devise_mapping.rememberable? %>
    
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                    <% end %>
                  </div>
   
  <div class="actions">
    <div class="center-btn">
    <%= f.submit "Log in" %>
    <%= render "devise/shared/links" %>
    </div>

  </div>
<% end %>
