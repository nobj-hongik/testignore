<div class="container">
  <%= form_for [@question, @answer] do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group ">
      <%= f.label :title, "답변 제목" %><br />
      <%= f.text_area :title, class: "form-control" ,rows: "5" %>
    </div>
    <div class="form-group ">
      <%= f.label :content, "답변 내용" %><br />
      <%= f.text_area :content, class: "form-control" ,rows: "5" %>
    </div>
    <div class="form-group formbtn" style="text-align:center;">
      <%= f.submit "질문하기", class: "btn btn-md btn-default btn-lg btlogin" %>
    </div>
  <% end %>
</div>
